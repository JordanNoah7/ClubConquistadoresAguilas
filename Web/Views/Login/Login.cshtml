@{
    Layout = null;
    ViewBag.Title = "Login";
}
<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/x-icon" href="~/img/smalllogo.png">
    <link rel="stylesheet" href="~/css/styleLogin.css" asp-append-version="true"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <title>Iniciar Sesión</title>
</head>
<body>
<main>
    <div class="box">
        <div class="inner-box">
            <div class="carousel">
                <img src="~/img/fondo2.jpeg" class="image img-1" alt=""/>
                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <p id="message">@ViewBag.ErrorMessage</p>
                }
            </div>
            <div class="forms-wrap">
                <form action="@Url.Action("Login", "Login")" method="post" autocomplete="off" class="sing-in-form">
                    <div class="logo">
                        <img src="~/img/logo.png"/>
                    </div>
                    <div class="formulario">
                        <div class=" container">
                            <div class="input-wrap">
                                <label class="visually-hidden" for="unombre">Username</label>
                                <div class="input-group input-group-lg">
                                    <div class="input-group-text">
                                        <img src="~/icono/usuario (verde).png"/>
                                    </div>
                                    <input type="text"
                                           class="form-control"
                                           id="username"
                                           name="username"
                                           autocomplete="off"
                                           placeholder="Ingresar Usuario"
                                           required>
                                </div>
                            </div>
                            <div class="input-wrap">
                                <label class="visually-hidden" for="pass">Password</label>
                                <div class="input-group input-group-lg">
                                    <div class="input-group-text">
                                        <img src="~/icono/llave(verde).png"/>
                                    </div>
                                    <input type="password"
                                           class="form-control"
                                           id="password"
                                           name="password"
                                           autocomplete="off"
                                           placeholder="Ingresar Contraseña"
                                           required>
                                </div>
                            </div>
                        </div>
                        <div class="container-fluid h-100">
                            <div class="row w-100 align-items-center">
                                <div class=" col text-center">
                                    <button type="submit" class="btn btn-outline-success center-block" id="btnIngresar">
                                        Ingresar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
<script src="/js/login.js"> </script>
</body>
</html>