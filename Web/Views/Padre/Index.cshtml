@using Microsoft.AspNetCore.Razor.Language
@model VmPerson
@{
    Layout = "_LayoutCrud";
    ViewBag.Title = "Perfil Apoderado";
}
<link rel="stylesheet" href="~/css/PerfilPadre.css" asp-append-version="true"/>
@foreach (var item in Model.PersonList)
{
    <div class="insights">
        <div class="hijo">
            <div class="middle">
                <div class="rigth">
                    <h3>Nombre: <b>@item.FirstName @item.FullSurname</b></h3>
                </div>
                <div class="linea"></div>
                <div class="center">
                    <h3>Dni: <b>@item.Dni</b></h3>
                </div>
                <div class="linea"></div>
                <div class="left">
                    <form action="@Url.Action("PerfilHijoConquis", "Padre")" method="get">
                        <input type="hidden" name="nro" value="@item.Id"/>
                        <button type="submit" id="edit" class="btn btn-default">
                            <span class="material-symbols-outlined">open_in_new</span>
                        </button>
                    </form>
                    <h3>Clase: <b>@item.Class</b></h3>
                    <h3>Unidad: <b>@item.Unit</b></h3>
                </div>
            </div>
        </div>
    </div>
}