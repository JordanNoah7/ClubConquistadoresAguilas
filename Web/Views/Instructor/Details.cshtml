@model VmPerson
@{
    ViewData["Vista"] = "Details";
    ViewBag.Title = "Instructores";
}
<script type="text/javascript"
        src="~/js/cruds.js">
</script>
<script type="text/javascript"
        src="~/js/cruds2.js">
</script>
<link rel="stylesheet" href="~/css/CrudOrganizacion.css" asp-append-version="true"/>
<div class="recent-order">
    <h2>Instructor ***<button type="submit" class="btnCreate" onclick="location.href='@Url.Action("Create", "Instructor")'">Agregar</button></h2>
    <table class="table display table-hover">
        <thead>
        <tr name="columna">
            <th class="nombre" name="colNombre">Nombre</th>
            <th class="apellido" name="colApellido">Apellidos</th>
            <th class="clase" name="colClase">Clase</th>
            <th class="cargo" name="colCargo">Editar</th>
            <th class="cargo" name="colCargo">Eliminar</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.PersonList)
        {
            <tr name="fila">
                <td class="nombre" name="rowNombre">@item.FirstName</td>
                <td class="apellido" name="rowApellido">@item.FullSurname</td>
                <td class="clase" name="rowClase">@item.Class</td>
                <td>
                    <form action="@Url.Action("Edit", "Instructor")" method="get">
                        <input type="hidden" name="nro" value="@item.Id"/>
                        <button type="submit" id="edit" class="btn btn-default">
                            <span class="material-symbols-outlined">edit_square</span>
                        </button>
                    </form>
                </td>
                <td>
                    <form action="@Url.Action("Delete", "Instructor")" method="get">
                        <input type="hidden" name="nro" value="@item.Id"/>
                        <button type="submit" id="delete" class="btn btn-default">
                            <span class="material-symbols-outlined">delete</span>
                        </button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
<script>
    $(document).ready(function () {
        $('table.display').DataTable();
    });
</script>